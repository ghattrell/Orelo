= form_for @desired_language do |f|
  - if @desired_language.errors.any?
    #error_explanation
      %h2= "#{pluralize(@desired_language.errors.count, "error")} prohibited this desired_language from being saved:"
      %ul
        - @desired_language.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :language_id
    = f.number_field :language_id
  .actions
    = f.submit 'Save'
